         if (type === "uri") {
           let browserWin = this.target.tab.ownerDocument.defaultView;
           browserWin.openUILinkIn(url, "tab");
         } else if (type === "cssresource") {
           return this.toolbox.viewSourceInStyleEditor(url);
         } else if (type === "jsresource") {
