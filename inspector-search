@@ -3310,16 +3359,85 @@ var WalkerFront = exports.WalkerFront = 
   getNodeFromActor: protocol.custom(function(actorID, path) {
     return this._getNodeFromActor(actorID, path).then(response => {
       return response ? response.node : null;
     });
   }, {
